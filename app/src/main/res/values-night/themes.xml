<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Nutrifish" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="colorPrimaryVariant">@color/darkGreen</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/sageGreen</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/darkGreen</item>
        <item name="android:navigationBarColor">@color/darkGreen</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="outlinedBox" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="boxStrokeColor">@color/darkGreen</item>
        <item name="cursorColor">@color/darkGreen</item>
        <item name="hintTextColor">@color/darkGreen</item>
    </style>


    <style name="CustomAlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <!-- Customize the positive button color -->
        <item name="colorAccent">@color/darkGreen</item>
    </style>
</resources>